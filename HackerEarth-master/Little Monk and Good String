#include <bits/stdc++.h>
using namespace std;
#define boost ios_base::sync_with_stdio(false), cin.tie(NULL)
#define lli long long int
int main()
{
 boost;
 string s;
 cin>>s;
 int n,count=0,sub;
  n=s.length();

for(int i=0;i<n;i++)
{
if((s[i]=='a')||(s[i]=='e')||(s[i]=='i')||(s[i]=='o')||(s[i]=='u'))
  {
    count++;
    if(count>sub)
    sub=count;
  }
    else
    count=0;
}
    cout<<sub;
 
}
